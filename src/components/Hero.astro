---
interface Props {
  title?: string;
  subtitle?: string;
  showStats?: boolean;
}

const { 
  title = "Tu bienestar es mi vocación",
  subtitle = "Soy Katy Caballero, osteópata y masajista en Alpedrete. Te ayudo a recuperar el equilibrio de tu cuerpo mediante técnicas manuales suaves y personalizadas.",
  showStats = true
} = Astro.props;
---

<section class="hero" id="inicio">
  <div class="container hero-container">
    <div class="hero-content">
      <div class="hero-badge">
        <svg viewBox="0 0 24 24"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/></svg>
        Más de 12 años de experiencia
      </div>
      
      <h1>{title.split(' ').slice(0, -1).join(' ')} <span>{title.split(' ').slice(-1)}</span></h1>
      
      <p class="hero-description">{subtitle}</p>
      
      <div class="hero-buttons">
        <a href="/reservar" class="btn btn-primary">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 3h-1V1h-2v2H8V1H6v2H5c-1.11 0-1.99.9-1.99 2L3 19c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16H5V8h14v11zM9 10H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2zm-8 4H7v2h2v-2zm4 0h-2v2h2v-2zm4 0h-2v2h2v-2z"/></svg>
          Reservar Cita
        </a>
        <a href="https://wa.me/34643961065" class="btn btn-secondary" target="_blank" rel="noopener">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
          WhatsApp
        </a>
      </div>
      
      {showStats && (
        <div class="hero-stats">
          <div class="hero-stat">
            <div class="hero-stat-number">12+</div>
            <div class="hero-stat-label">Años de experiencia</div>
          </div>
          <div class="hero-stat">
            <div class="hero-stat-number">1500+</div>
            <div class="hero-stat-label">Pacientes tratados</div>
          </div>
          <div class="hero-stat">
            <div class="hero-stat-number">5★</div>
            <div class="hero-stat-label">Valoración media</div>
          </div>
        </div>
      )}
    </div>
    
    <div class="hero-image">
      <img src="/images/katy-trabajando.jpg" alt="Katy Caballero realizando tratamiento de osteopatía" class="hero-image-main" loading="eager" />
      <div class="hero-image-accent"></div>
      <div class="hero-image-dots"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: linear-gradient(135deg, var(--color-cream) 0%, var(--color-warm-white) 100%);
    overflow: hidden;
    padding-top: 100px;
  }
  
  .hero::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 80%;
    height: 150%;
    background: radial-gradient(ellipse, rgba(90, 124, 89, 0.06) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .hero-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }
  
  .hero-content {
    z-index: 1;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: var(--color-secondary-light);
    color: var(--color-text);
    padding: 10px 18px;
    border-radius: 30px;
    font-size: 0.85rem;
    font-weight: 500;
    margin-bottom: 28px;
  }
  
  .hero-badge svg {
    width: 16px;
    height: 16px;
    color: var(--color-secondary);
  }
  
  .hero h1 {
    margin-bottom: 24px;
    color: var(--color-primary-dark);
  }
  
  .hero h1 span {
    color: var(--color-secondary);
    font-style: italic;
  }
  
  .hero-description {
    font-size: 1.15rem;
    margin-bottom: 40px;
    line-height: 1.8;
    max-width: 500px;
  }
  
  .hero-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }
  
  .hero-stats {
    display: flex;
    gap: 50px;
    margin-top: 50px;
    padding-top: 40px;
    border-top: 1px solid rgba(90, 124, 89, 0.15);
  }
  
  .hero-stat-number {
    font-family: var(--font-display);
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-primary);
    line-height: 1;
  }
  
  .hero-stat-label {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 6px;
  }
  
  .hero-image {
    position: relative;
  }
  
  .hero-image-main {
    width: 100%;
    height: 550px;
    object-fit: cover;
    border-radius: 20px;
    box-shadow: var(--shadow-strong);
  }
  
  .hero-image-accent {
    position: absolute;
    bottom: -30px;
    left: -30px;
    width: 180px;
    height: 180px;
    background: var(--color-secondary-light);
    border-radius: 50%;
    z-index: -1;
  }
  
  .hero-image-dots {
    position: absolute;
    top: 40px;
    right: -20px;
    width: 100px;
    height: 100px;
    background-image: radial-gradient(var(--color-primary-light) 2px, transparent 2px);
    background-size: 15px 15px;
    opacity: 0.5;
  }
  
  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 50px;
    }
    
    .hero-image-main {
      height: 400px;
    }
    
    .hero-stats {
      justify-content: flex-start;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      padding-top: 120px;
      min-height: auto;
      padding-bottom: 60px;
    }
    
    .hero-stats {
      flex-wrap: wrap;
      gap: 30px;
    }
    
    .hero-buttons {
      flex-direction: column;
    }
    
    .hero-image-accent,
    .hero-image-dots {
      display: none;
    }
  }
</style>
