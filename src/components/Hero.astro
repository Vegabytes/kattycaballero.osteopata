---
interface Props {
  title?: string;
  subtitle?: string;
  showStats?: boolean;
}

const { 
  title = "Tu bienestar es mi vocación",
  subtitle = "Soy Katy Caballero, osteópata y masajista en Alpedrete. Te ayudo a recuperar el equilibrio de tu cuerpo mediante técnicas manuales suaves y personalizadas.",
  showStats = true
} = Astro.props;
---

<section class="hero" id="inicio">
  <!-- Video Background -->
  <div class="hero-video-container">
    <video autoplay muted loop playsinline class="hero-video" id="hero-video">
      <source src="/images/video-hero.mp4" type="video/mp4">
    </video>
    <div class="hero-video-overlay"></div>
  </div>
  
  <script>
    const video = document.getElementById('hero-video') as HTMLVideoElement;
    if (video) {
      video.playbackRate = 0.6;
    }
  </script>
  
  <div class="container hero-container">
    <div class="hero-content">
      <div class="hero-badge">
        <svg viewBox="0 0 24 24"><path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z" fill="currentColor"/></svg>
        Más de 12 años de experiencia
      </div>
      
      <h1>
        <span class="hero-title-line">Osteópata y Masajista</span>
        <span class="hero-title-accent">en Alpedrete, Madrid</span>
      </h1>

      <p class="hero-tagline">Tu bienestar es mi vocación</p>
      
      <p class="hero-description">{subtitle}</p>
      
      <div class="hero-buttons">
        <a href="https://wa.me/34643961065?text=Hola%20Katy,%20me%20gustaría%20reservar%20una%20cita" class="btn-reservar" target="_blank" rel="noopener">
          <svg viewBox="0 0 24 24" fill="currentColor" class="whatsapp-icon">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
          </svg>
          <span>Reservar Cita</span>
          <span class="btn-arrow">→</span>
        </a>
      </div>
      
      {showStats && (
        <div class="hero-stats">
          <div class="hero-stat">
            <div class="hero-stat-number">12+</div>
            <div class="hero-stat-label">Años de experiencia</div>
          </div>
          <div class="hero-stat">
            <div class="hero-stat-number">1500+</div>
            <div class="hero-stat-label">Pacientes tratados</div>
          </div>
          <div class="hero-stat">
            <div class="hero-stat-number">5★</div>
            <div class="hero-stat-label">Valoración media</div>
          </div>
        </div>
      )}
    </div>
    
    <div class="hero-image">
      <img src="/images/logo.png" alt="Katy Caballero - Osteópata y Masajista" width="380" height="380" class="hero-logo" loading="eager" />
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="scroll-indicator">
    <span>Descubre más</span>
    <svg viewBox="0 0 24 24" fill="currentColor"><path d="M7.41 8.59L12 13.17l4.59-4.58L18 10l-6 6-6-6 1.41-1.41z"/></svg>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }
  
  .hero-video-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
  }
  
  .hero-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .hero-video-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(250, 248, 243, 0.75) 0%,
      rgba(255, 254, 251, 0.65) 50%,
      rgba(250, 248, 243, 0.70) 100%
    );
  }
  
  .hero-container {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 60px;
    align-items: center;
    padding-top: 120px;
    padding-bottom: 80px;
  }
  
  .hero-content {
    z-index: 1;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(196, 163, 90, 0.15);
    color: var(--color-text);
    padding: 12px 20px;
    border-radius: 30px;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 30px;
    border: 1px solid rgba(196, 163, 90, 0.3);
  }
  
  .hero-badge svg {
    width: 18px;
    height: 18px;
    color: var(--color-secondary);
  }
  
  .hero h1 {
    margin-bottom: 28px;
    line-height: 1.1;
  }
  
  .hero-title-line {
    display: block;
    font-size: clamp(2.5rem, 5vw, 4rem);
    color: var(--color-primary-dark);
    font-weight: 500;
  }
  
  .hero-title-accent {
    display: block;
    font-family: 'Cormorant Garamond', serif;
    font-size: clamp(3rem, 6vw, 5rem);
    color: var(--color-secondary);
    font-style: italic;
    font-weight: 500;
    margin-top: -5px;
  }
  
  .hero-tagline {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-style: italic;
    color: var(--color-primary);
    margin-bottom: 20px;
    font-weight: 500;
  }

  .hero-description {
    font-size: 1.15rem;
    margin-bottom: 40px;
    line-height: 1.9;
    max-width: 520px;
    color: var(--color-text-light);
  }
  
  .hero-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .btn-reservar {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: var(--color-primary);
    color: white;
    padding: 16px 32px;
    border-radius: 50px;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    box-shadow: 0 4px 20px rgba(90, 124, 89, 0.35);
    transition: all 0.3s ease;
    letter-spacing: 0.3px;
  }

  .btn-reservar:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(90, 124, 89, 0.45);
    color: white;
  }

  .btn-reservar .whatsapp-icon {
    width: 18px;
    height: 18px;
    fill: white;
  }

  .btn-reservar .btn-arrow {
    font-size: 1rem;
    transition: transform 0.3s ease;
    opacity: 0.8;
  }

  .btn-reservar:hover .btn-arrow {
    transform: translateX(3px);
    opacity: 1;
  }
  
  .btn-whatsapp-hero {
    background: #25D366;
    color: white;
    padding: 16px 32px;
    border-radius: 50px;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
  }
  
  .btn-whatsapp-hero:hover {
    background: #20bd5a;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.4);
    color: white;
  }
  
  .hero-stats {
    display: flex;
    gap: 50px;
    margin-top: 50px;
    padding-top: 40px;
    border-top: 1px solid rgba(90, 124, 89, 0.15);
  }
  
  .hero-stat-number {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2.8rem;
    font-weight: 600;
    color: var(--color-primary);
    line-height: 1;
  }
  
  .hero-stat-label {
    font-size: 0.85rem;
    color: var(--color-text-muted);
    margin-top: 6px;
  }
  
  .hero-image {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .hero-logo {
    width: 100%;
    max-width: 380px;
    height: auto;
    filter: drop-shadow(0 10px 30px rgba(90, 124, 89, 0.15));
    animation: float 6s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: var(--color-text-muted);
    font-size: 0.85rem;
    animation: bounce 2s infinite;
  }
  
  .scroll-indicator svg {
    width: 24px;
    height: 24px;
  }
  
  @keyframes bounce {
    0%, 100% { transform: translateX(-50%) translateY(0); }
    50% { transform: translateX(-50%) translateY(8px); }
  }
  
  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }
    
    .hero-description {
      margin-left: auto;
      margin-right: auto;
    }
    
    .hero-buttons {
      justify-content: center;
    }
    
    .hero-stats {
      justify-content: center;
    }
    
    .hero-logo {
      max-width: 280px;
    }
    
    .hero-image {
      order: -1;
    }
  }
  
  @media (max-width: 768px) {
    .hero {
      min-height: auto;
      padding-top: 100px;
      padding-bottom: 60px;
    }
    
    .hero-container {
      padding-top: 20px;
    }
    
    .hero-stats {
      flex-wrap: wrap;
      gap: 30px;
    }
    
    .hero-buttons {
      flex-direction: column;
    }
    
    .hero-buttons .btn,
    .hero-buttons .btn-whatsapp-hero {
      width: 100%;
      justify-content: center;
    }
    
    .scroll-indicator {
      display: none;
    }
    
    .hero-logo {
      max-width: 220px;
    }
  }
</style>
