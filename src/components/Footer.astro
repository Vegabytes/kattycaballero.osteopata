  { href: '/osteopata-moralzarzal', label: 'Moralzarzal' },
  { href: '/osteopata-galapagar', label: 'Galapagar' },
  { href: '/osteopata-guadarrama', label: 'Guadarrama' },
  { href: '/osteopata-torrelodones', label: 'Torrelodones' },
  { href: '/osteopata-becerril-de-la-sierra', label: 'Becerril de la Sierra' },
  { href: '/osteopata-collado-mediano', label: 'Collado Mediano' },
  { href: '/osteopata-los-molinos', label: 'Los Molinos' },
