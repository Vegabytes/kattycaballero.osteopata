---
interface Service {
  id: string;
  title: string;
  description: string;
  duration: string;
  price: string;
  image: string;
  alt: string;
  featured?: boolean;
  slug: string;
}

const services: Service[] = [
  {
    id: 'osteopatia',
    slug: 'osteopatia-alpedrete',
    title: 'Osteopatía Estructural, Visceral y Sacrocraneal',
    description: 'Tratamiento integral que aborda el sistema músculo-esquelético, órganos internos y sistema craneal. Ideal para dolores de espalda, cervicales, problemas digestivos, migrañas y estrés.',
    duration: '55 min',
    price: '40€',
    image: 'https://images.unsplash.com/photo-1519823551278-64ac92734fb1?w=250&h=250&fit=crop&crop=center&q=80',
    alt: 'Sesión de osteopatía estructural y craneal en consulta de Alpedrete, Sierra de Madrid',
    featured: true
  },
  {
    id: 'masaje-deportivo',
    slug: 'masaje-deportivo-alpedrete',
    title: 'Masaje Deportivo',
    description: 'Recuperación muscular especializada para deportistas. Prevención de lesiones, alivio de contracturas y mejora del rendimiento físico.',
    duration: '30 min',
    price: '20€',
    image: 'https://images.pexels.com/photos/8219058/pexels-photo-8219058.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop',
    alt: 'Masaje deportivo para recuperación muscular en Alpedrete, cerca de Collado Villalba'
  },
  {
    id: 'masaje-corporal',
    slug: 'masaje-corporal-alpedrete',
    title: 'Masaje Corporal con Aceite',
    description: 'Relajación y desconexión plena. Masaje envolvente con aceites esenciales que alivia tensiones y nutre la piel.',
    duration: '60 min / 90 min',
    price: '40€ / 55€',
    image: 'https://images.unsplash.com/photo-1544161515-4ab6ce6db874?w=300&h=300&fit=crop&crop=center&q=80',
    alt: 'Masaje relajante corporal con aceites esenciales en Alpedrete, Sierra de Guadarrama'
  },
  {
    id: 'masaje-tailandes',
    slug: 'masaje-tailandes-alpedrete',
    title: 'Masaje Tradicional Tailandés',
    description: 'Movilidad y estiramientos asistidos. Técnica milenaria que combina presiones, estiramientos y trabajo energético.',
    duration: '60 min / 90 min',
    price: '45€ / 60€',
    image: 'https://images.pexels.com/photos/6186763/pexels-photo-6186763.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop',
    alt: 'Masaje tradicional tailandés con estiramientos en Alpedrete, Sierra de Madrid'
  },
  {
    id: 'pindas-herbales',
    slug: 'masaje-pindas-herbales-alpedrete',
    title: 'Masaje con Pindas Herbales Calientes',
    description: 'Calor terapéutico con saquitos de hierbas medicinales. Relaja profundamente, descontractura y tiene propiedades antiinflamatorias.',
    duration: '90 min',
    price: '70€',
    image: 'https://images.pexels.com/photos/6187421/pexels-photo-6187421.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop',
    alt: 'Masaje con pindas herbales calientes para relajación profunda en Alpedrete'
  },
  {
    id: 'embarazadas',
    slug: 'masaje-embarazadas-alpedrete',
    title: 'Masaje para Embarazadas',
    description: 'Alivio y bienestar materno. Desde el 4º mes de embarazo. Técnicas suaves adaptadas a cada etapa para reducir molestias típicas.',
    duration: '60 min',
    price: '40€',
    image: 'https://images.unsplash.com/photo-1493894473891-10fc1e5dbd22?w=300&h=300&fit=crop&crop=center&q=80',
    alt: 'Masaje prenatal para embarazadas en consulta de Alpedrete, Moralzarzal y Galapagar'
  }
];
---

<section class="services" id="servicios">
  <div class="container">
    <div class="section-header">
      <span class="section-tag">Servicios</span>
      <h2>Tratamientos personalizados para tu bienestar</h2>
      <p>Cada cuerpo es único. Por eso, diseño cada sesión adaptada a tus necesidades específicas.</p>
    </div>
    
    <div class="services-grid">
      {services.map(service => (
        <a href={`/servicios/${service.slug}`} class="service-card-link">
          <div class="service-card" id={service.id} class:list={[{ featured: service.featured }]}>
            <div class="service-image">
              <img src={service.image} alt={service.alt} loading="lazy" />
            </div>
            <h3>{service.title}</h3>
            <p>{service.description}</p>
            <div class="service-meta">
              <span class="service-duration">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/></svg>
                {service.duration}
              </span>
              <span class="service-price">{service.price}</span>
            </div>
            <span class="service-more">Ver más →</span>
          </div>
        </a>
      ))}
    </div>
    
    <div class="services-cta">
      <p>¿No sabes qué tratamiento es mejor para ti?</p>
      <a href="/contacto" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
        </svg>
        Consúltame sin compromiso
      </a>
    </div>
  </div>
</section>

<style>
  .services {
    background: var(--color-cream);
  }
  
  .service-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .service-card {
    background: var(--color-warm-white);
    padding: 40px 30px;
    border-radius: 20px;
    text-align: center;
    transition: var(--transition);
    border: 1px solid transparent;
    position: relative;
  }
  
  .service-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-medium);
    border-color: rgba(90, 124, 89, 0.1);
  }
  
  .service-card.featured::before {
    content: 'Más popular';
    position: absolute;
    top: 20px;
    right: 20px;
    background: var(--color-secondary);
    color: white;
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
  }
  
  .service-image {
    width: 130px;
    height: 130px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto 24px;
    box-shadow: 0 4px 15px rgba(90, 124, 89, 0.2);
    border: 3px solid var(--color-primary-light);
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .service-card:hover .service-image img {
    transform: scale(1.1);
  }
  
  .service-card h3 {
    font-size: 1.3rem;
    margin-bottom: 16px;
    color: var(--color-primary);
    line-height: 1.3;
    font-weight: 600;
  }
  
  .service-card p {
    margin: 0 auto 20px;
    font-size: 0.95rem;
    text-align: center;
  }
  
  .service-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    padding-top: 20px;
    border-top: 1px solid rgba(90, 124, 89, 0.1);
  }
  
  .service-duration {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: var(--color-text-muted);
  }
  
  .service-duration svg {
    width: 16px;
    height: 16px;
  }
  
  .service-price {
    background: var(--color-secondary-light);
    padding: 8px 20px;
    border-radius: 20px;
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.95rem;
  }

  .service-more {
    display: inline-block;
    margin-top: 15px;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-primary);
    transition: var(--transition);
  }

  .service-card:hover .service-more {
    color: var(--color-secondary);
  }
  
  .services-cta {
    text-align: center;
    margin-top: 60px;
    padding-top: 40px;
    border-top: 1px solid rgba(90, 124, 89, 0.1);
  }

  .services-cta p {
    margin: 0 auto 24px;
    font-size: 1.15rem;
    color: var(--color-primary);
    font-weight: 500;
  }
  
  @media (max-width: 1024px) {
    .services-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 600px) {
    .services-grid {
      grid-template-columns: 1fr;
    }
    
    .service-card {
      padding: 30px 25px;
    }
  }
</style>
