---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Inicio' },
  { href: '/servicios', label: 'Servicios' },
  { href: '/sobre-mi', label: 'Sobre Mí' },
  { href: '/blog', label: 'Blog' },
  { href: '/contacto', label: 'Contacto' },
];
---

<nav class="nav" id="main-nav">
  <div class="nav-container">
    <a href="/" class="nav-logo">
      <img src="/images/logo.png" alt="Katy Caballero - Osteópata y Masajista" />
    </a>
    
    <ul class="nav-links">
      {navLinks.map(link => (
        <li>
          <a 
            href={link.href} 
            class:list={[{ active: currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href)) }]}
          >
            {link.label}
          </a>
        </li>
      ))}
      <li>
        <a href="https://wa.me/34643961065?text=Hola%20Katy,%20me%20gustaría%20reservar%20una%20cita" class="nav-cta" target="_blank" rel="noopener">
